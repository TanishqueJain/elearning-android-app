<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    tools:context=".LoginActivity">

    <EditText
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:hint="Username"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="#FFE401"
        android:textColorHint="#FFE401"
        android:id="@+id/login_phone_number_input"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#FFE401"
        android:textColorHint="#FFE401"
        android:layout_below="@id/login_phone_number_input"
        android:id="@+id/login_password_input"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/login_password_input"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:id="@+id/Linear_layout_l"
        >

        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:text="Remember me"
            android:textColor="#FFE401"
            android:textSize="16dp"
            android:layout_marginLeft="17dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:id="@+id/remember_me_chkb"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forget_password_link"
            android:text="Forget Password?"
            android:textColor="#FFE401"
            android:textStyle="bold"
            android:textSize="17sp"
            android:visibility="visible"
            android:layout_marginLeft="80dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear_layout_l"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/admin_pannel_link"
        android:text="I'm a Admin"
        android:layout_below="@id/login_btn"
        android:layout_alignParentEnd="true"
        android:textColor="#FFE401"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_admin_pannel_link"
        android:text="I'm not a Admin"
        android:layout_below="@id/login_btn"
        android:layout_alignParentStart="true"
        android:textColor="#FFE401"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="23dp"
        android:visibility="invisible"
        android:layout_marginLeft="80dp"
        />

</RelativeLayout>