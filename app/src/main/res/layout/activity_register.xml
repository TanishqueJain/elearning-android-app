<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".RegisterActivity">


<!--    <ImageView-->
<!--        android:id="@+id/register_applogo"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:srcCompat="@drawable/applogo"-->
<!--        android:layout_above="@+id/register_username_input"/>-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:hint="Name"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#F6B900"
        android:textColorHint="#F6B900"
        android:layout_above="@+id/register_phone_number_input"
        android:id="@+id/register_username_input"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:hint="Phone Number"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#F6B900"
        android:textColorHint="#F6B900"
        android:layout_above="@+id/register_password_input"
        android:id="@+id/register_phone_number_input"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#F6B900"
        android:textColorHint="#F6B900"
        android:layout_above="@id/register_email_input"
        android:id="@+id/register_password_input"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15sp"
        android:hint="Email"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#F6B900"
        android:textColorHint="#F6B900"
        android:layout_above="@+id/register_btn"
        android:id="@+id/register_email_input"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:text="Create Account"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />


</RelativeLayout>